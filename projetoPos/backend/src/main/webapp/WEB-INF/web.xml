<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>exibirUsuarioServlet</servlet-name>
    <servlet-class>exibir.ExibirUsuario</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>exibirCategoriaServlet</servlet-name>
    <servlet-class>exibir.ExibirCategoria</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>exibirProdutoServlet</servlet-name>
    <servlet-class>exibir.ExibirProduto</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>exibirUsuarioServlet</servlet-name>
    <url-pattern>/usuario</url-pattern>
  </servlet-mapping>    

  <servlet-mapping>
    <servlet-name>exibirCategoriaServlet</servlet-name>
    <url-pattern>/categoria</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>exibirProdutoServlet</servlet-name>
    <url-pattern>/produto</url-pattern>
  </servlet-mapping>
</web-app>
